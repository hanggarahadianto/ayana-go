
services:
  backend-ayana-go:
    build:
      context: ./ayana-go
      dockerfile: Dockerfile
    ports:
      - "8080:8080"
    env_file:
      - ./ayana-go/.env   # Load environment variables for backend from .env file
    volumes:
      - ./ayana-go:/app
    restart: always
    depends_on:
      - postgres  # Ensure backend starts after PostgreSQL

  postgres:
    image: postgres:16  # Use PostgreSQL 16
    environment:
      POSTGRES_USER: ${DB_USER}           # Read from .env file
      POSTGRES_PASSWORD: ${DB_PASSWORD}   # Read from .env file
      POSTGRES_DB: ${DB_NAME}             # Read from .env file
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data  # Persist data
    networks:
      - backend_network
    restart: always

volumes:
  postgres_data:

networks:
  backend_network:
    driver: bridge